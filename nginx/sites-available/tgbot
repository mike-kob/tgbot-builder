# Default server configuration
#
server {
	listen 80;
	listen [::]:80;
  
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

	server_name 164.92.255.132;
	include snippets/self-signed.conf;
	include snippets/ssl-params.conf;	

  access_log /var/log/nginx-default.log json_analytics;

  location / {
    return 418;
  }


	location /update/ {
		proxy_pass http://localhost:8088/update/;
	}
}
